{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/wf-NanoTerm/master/nextflow_schema.json",
    "title": "wf-NanoTerm pipeline parameters",
    "description": "Determine phage termini from nanopore sequencing",
    "type": "object",
    "properties": {
        "out_dir": {
            "type": "string",
            "default": "output"
        },
        "seqplat": {
            "type": "string",
            "default": "nanopore"
        },
        "name": {
            "type": "string",
            "default": "None"
        }
    },
    "definitions": {
        "input": {
            "title": "Input",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "fastq": {
                    "type": "string",
                    "default": "None",
                    "description": "Path to the folder that contains the fastq.gz sequence reads"
                },
                "reference": {
                    "type": "string",
                    "default": "None",
                    "description": "Path to the reference genome fasta file"
                }
            },
            "required": [
                "fastq",
                "reference"
            ]
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/input"
        }
    ]
}