{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/wf-NanoTerm/master/nextflow_schema.json",
  "title": "wf-NanoTerm",
  "description": "Determine phage termini from nanopore sequencing",
  "type": "object",
  "definitions": {
    "input": {
      "title": "Input Options",
      "type": "object",
      "description": "",
      "default": "",
      "properties": {
        "fastq": {
          "type": "string",
          "default": "None",
          "description": "Path to the folder that contains the fastq.gz sequence reads",
          "format": "directory-path"
        },
        "reference": {
          "type": "string",
          "default": "None",
          "description": "Path to the reference genome fasta file",
          "format": "file-path"
        }
      },
      "required": ["fastq", "reference"]
    },
    "output": {
      "title": "Output Options",
      "type": "object",
      "description": "",
      "default": "",
      "properties": {
        "name": {
          "type": "string",
          "default": "my_phage",
          "description": "Phage name for report"
        },
        "out_dir": {
          "type": "string",
          "default": "output",
          "description": "Directory for output files"
        }
      },
      "required": ["name", "out_dir"]
    },
    "additional_settings": {
      "title": "Additional settings",
      "type": "object",
      "description": "",
      "default": "",
      "properties": {
        "seqplat": {
          "type": "string",
          "default": "nanopore",
          "description": "Sequencing platform",
          "enum": ["nanopore", "illumina", "pacbio"]
        }
      },
      "required": ["seqplat"]
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/input"
    },
    {
      "$ref": "#/definitions/output"
    },
    {
      "$ref": "#/definitions/additional_settings"
    }
  ]
}
